        android:roundIcon="@mipmap/ic_launcher"
        android:theme="@style/Theme.OceanProfessional">
        <activity
            android:name=".ui.edit.NoteEditActivity"
            android:exported="false"
            android:windowSoftInputMode="stateVisible|adjustResize" />
